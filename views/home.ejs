<body>
  <section class="all-doners">


    <!-- 
    ----------------------------------navbar section----------------------- -->
    <nav>
      <div>
        <img src="./assets/pintu.png" class="logo" />
      </div>
      <input type="checkbox" id="click" />
      <label for="click" class="menu-btn">
        <i class="fas fa-bars"></i>
