        <li><a href="./loginregister">Login</a></li>
        <li><a href="./loginregister">SignUp</a></li>
      
      </ul>
    </nav>



    <!-- -----------------------------landing page section with image------------------------ -->


    <section class="row" id="landing">
      <div class="col">
        One pint of blood can save up to three lives.

        Start donating today.


      </div>
      <div>
        <img src="./assets/6262.jpg" alt="blood donation" class="landing-image">
      </div>

    </section>

    <!-- --------------------------here starts the donor filter and donor cards -------------------------------- -->

    <div class="donors">

      <!-- --------------------------------------------------filter section ---------------------------------------------- -->
      <div class="filter-section">
        <div class="filter-header">

          <label class="filter-header-text">Donors</label>
        </div>
        <div class="filter-container">

          <form action="./search" method="POST" name="form1" id="form1" class="form-inline">

            <select name="subject" id="subject">
              <option value="" selected="selected">Provience</option>
              <!-- <option value="Province No. 1">Province No. 1</option>
              <option value="Province No. 3">Province No. 3</option> -->
            </select>
            <br><br>
            <select name="topic" id="topic">
              <option value="" selected="selected">District</option>
              <option value="Kathmandu">Kathmandu</option>
              <option value="Bhaktapur">Bhaktapur</option>
            </select>
            <br><br>
            <select name="chapter" id="chapter">
              <option value="" selected="selected">Municipality</option>
              <option value="Kathmandu">Kathmandu</option>
              <option value="Changu narayan">Changu narayan</option>
            </select>
            <br><br>
            <select name="BloodGroup">
              <option value="" selected="selected">Blood Group</option>
              <option value="A+">A+</option>
							<option value="A-">A-</option>
							<option value="B+">B+</option>
							<option value="B-">B-</option>
							<option value="O+">O+</option>
							<option value="O-">O-</option>
							<option value="AB+">AB+</option>
							<option value="AB-">AB-</option>
            </select>
            <br><br>
           
            <button type="submit"> Search</button>
          
          </form>
        </div>
      </div>

      <!-- -----------------------------------the donor cards starts from here------------------------------------------------ -->



      <div class="inner">




       
        <div class="row">
          <% for(var key in result ) {%>
          
          <!-- my added -->
          <div class="col">
            
            <div class="donor-card">
              <% for(var prop in result[key] ) {%>
                <% if(result[key][prop].status ==="Offline" )  {%>
                  Curenntly Offline
                    <% break %>
              <% } else{%>

              <!-- <img src="./assets/p1.jpg" alt=""> -->
              <% if(prop == 0 )  {%>
              <div class="name"><%= result[key][prop].name%></div>
              <div class="stars">
                <div class"contact-number"> <i class="fa-solid fa-phone"></i>: <%= result[key][prop].contact%></div>
                <div class"email"> <i class="fa-solid fa-envelope"></i>:<%= result[key][prop].email%></div>
                <div class="address"><i class="fa-solid fa-location-arrow"></i>:<%= result[key][prop].municipality%></div>
                <div class="blood-group">Blood Type: <%= result[key][prop].group%></div>
                <div>life saved : <%= result[key][prop].lives%></div>
              </div>
              <% } %>
              
              <div>
                
                <div class="user-history">
                  <div class="user-donation-history">
                    
                      <% if(result[key][prop].date !==null && result[key][prop].orgname !== null)  {%>
                        Donated in <%= result[key][prop].date%> via <%= result[key][prop].orgname  %>
                        
                        <% }else{ %>

                        Donation history not added
                     
                      
                      <% } %>


                  </div>
                </div>
                
              </div>
              <% } %>
              <% } %>
            </div>
            <!-- <form action="./request" method="POST" name="form1">
              <input type="text" name='phoneNumber' placeholder="Contact Number" required />
            <button type="submit">Request</button>
            </form> -->
            
          </div>

        
 
    

          <% } %>
      </div>
      
        </div>
        
       
 <!--------------------------------- donor cards section ends here  --------------------------------->
    </div>
